<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "My Lists", user_lists_path(current_user)  %></li>
      <li class="active"><%= link_to "#{@list.name}", user_list_path(current_user, @list) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= @list.name %></h2>
    <div class="inner">
      <div id="pending-tasks">
        <h3>Pending</h3>
        <%= render :partial => "users/lists/tasks/task", :collection => @list.pending_tasks %>
      </div>
      <div id="completed-tasks" %>
        <h3>Completed</h3>
        <%= render :partial => "users/lists/tasks/task", :collection => @list.completed_tasks %>
      </div>
      <br /><br />
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "Edit") + " Edit", edit_user_list_path(current_user, @list), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "Delete") + " Delete", user_list_path(current_user, @list), :method => "delete", :class => "button", :confirm => "Are you sur" %>
        <span class="text_button_padding">or</span>
        <%= link_to "Back", user_lists_path, :class => "text_button_padding link_button" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

