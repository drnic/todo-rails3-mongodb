<div class="group">
  <%= f.label :name, :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
  <span class="description">Ex: Things that i need to do today</span>
</div>

<div class="group">
  <%= f.label :public, :class => :label %>
  <%= f.check_box :public, :class => 'text_field' %>
  <span class="description">Anyone can see public lists, but not change the list</span>
</div>
 
<div id="tasks" class"group">
  <%= f.label :tasks, :class => :label %>
  <%= f.fields_for :tasks do |builder| %>
    <%= render :partial => 'task_fields', :locals => { :f => builder } %>
  <% end %>
  <p><%= link_to_add_fields "Add a task", f, :tasks %></p>
</div>
       
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "Save") %> 
    Save
  </button>
  <span class="text_button_padding">or</span>
  <%= link_to "Cancel", user_lists_path, :class => "text_button_padding link_button" %>
</div>
